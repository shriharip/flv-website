---
import { Container, FeatureCard } from '@odyssey-theme/components';
import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/HomeHeroSection.astro';
---

<Layout>
	<HomeHeroSection />
	<Container>
		<section id='ourWork' class="feature-card__section">
			<h2>Our Work</h2>
			<p>
				We work with passionate people like us who want results for the efforts that are put in.
			</p>
			<div  class="feature-card__grid">
			<img src="/assets/images/logo.jpg" alt="overlappLogo" class="avatar">
			<img src="/assets/images/logo192.png" alt="unganaLogo" class="avatar">
			<img src="/assets/images/instigate_logo.svg" alt="InstigateLogo" class="avatar">
			</div>
		</section>
			<section id='ourWork' class="feature-card__section">
			<h2>OpenSource</h2>
			<p>
				We contribute back to the open source community.
				</p>
				<p>Some of the repos we contribute to.</p>
			<div class="feature-card__grid">
			<img style={{background: 'black'}} src="https://storage.googleapis.com/cms-storage-bucket/ec64036b4eacc9f3fd73.svg" alt="Avatar" class="avatar">
			<img src="https://raw.githubusercontent.com/Milad-Akarie/auto_route_library/master/art/auto_route_logo.svg" alt="Avatar" class="avatar">
			<img src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png" alt="Avatar" class="avatar">
				</div>
		</section>
	</Container>

</Layout>

<style>

	.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}
	.feature-card__section {
		margin: var(--section-margin) auto;
	}
	.feature-card__grid {
		display: flex;
		justify-content: space-evenly;
		gap: var(--theme-grid-gap);
	}
	@media (max-width: 768px) {
		.feature-card__grid {
			grid-template-columns: 1fr;
		}
	}
</style>
